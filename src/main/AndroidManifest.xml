<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appbar_scrolling_view_behavior"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoEngenhariaDeSoftwareII"
        tools:targetApi="31">

        <!-- Activity de entrada (Tela inicial) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela de login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- Tela de cadastro -->
        <activity
            android:name=".CadastroUsuarioActivity"
            android:exported="true" />

        <!-- Tela de hoje -->
        <activity
            android:name=".todayActivity"
            android:exported="true" />

        <!-- Tela de edição de dieta -->
        <activity
            android:name=".EditarDietaActivity"
            android:exported="false" />

        <!-- Menu principal -->
        <activity
            android:name=".MenuActivity"
            android:exported="false" />

    </application>

</manifest>
