<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/borda_escura_gradiente"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textoNomedieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Nome dieta"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textoDescriçaodieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="textoDescriçaodieta"
                android:textColor="@color/black"
                android:textSize="10sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/textoVisualizarDieta"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Visualizar"
                android:backgroundTint="@color/azulPetroleo"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <Button
                android:id="@+id/textoAdicionarDieta"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Adicionar"
                android:backgroundTint="@color/azulPetroleo"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>