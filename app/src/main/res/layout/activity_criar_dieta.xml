<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CriarDietaActivity">

    <!-- CABEÇALHO SUPERIOR -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/azulEsverdeado"
        android:padding="7dp">

        <ImageButton
            android:id="@+id/buttonlogo"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/logobranco2"
            android:scaleType="fitCenter"
            android:contentDescription="Logo BioBalance"
            android:layout_marginLeft="40dp"/>

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Menu"
            android:src="@drawable/menu"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@null"     />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Mini agenda (baseada na today_activity) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#E9F5F3">

                <ImageButton
                    android:id="@+id/btnSemanaAnterior"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:id="@+id/textoMesSemana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outubro - Semana 1"
                    android:textColor="@color/azulPetroleo"
                    android:textSize="20sp"
                    android:paddingHorizontal="12dp" />

                <ImageButton
                    android:id="@+id/btnProximaSemana"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- Lista horizontal de dias -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDias"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="8dp"
                android:background="@drawable/borda_escura_gradiente"
                android:scrollbars="horizontal" />

            <!-- Conteúdo principal -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/layoutRefeicoes"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Exemplo de refeição -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Café da Manhã"
                            android:textColor="@color/azulEscuro"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btnAddCafe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adicionar Ingrediente"
                            android:backgroundTint="@color/azulEsverdeado"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCafe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="#E9F5F3"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Almoço"
                            android:textColor="@color/azulEscuro"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btnAddAlmoco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adicionar Ingrediente"
                            android:backgroundTint="@color/azulEsverdeado"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutAlmoco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="#E9F5F3"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CafeTarde"
                            android:textColor="@color/azulEscuro"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btnAddCafeTarde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adicionar Ingrediente"
                            android:backgroundTint="@color/azulEsverdeado"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCafeTarde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="#E9F5F3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jantar"
                            android:textColor="@color/azulEscuro"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/btnAddJantar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adicionar Ingrediente"
                            android:backgroundTint="@color/azulEsverdeado"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutJantar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="#E9F5F3" />

                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btnAdicionarDietas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar Dietas"
                android:backgroundTint="@color/azulEsverdeado"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_margin="10dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
